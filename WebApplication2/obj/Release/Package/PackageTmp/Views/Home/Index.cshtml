
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<!-- Carousel Start -->
<div class="container-fluid p-0">
    <div id="header-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="https://hino-nhatban.com/wp-content/uploads/2022/01/hino-1.jpg" alt="Image">
            </div>
            <div class="carousel-item">
                <img class="w-100" src="https://hino-nhatban.com/wp-content/uploads/2022/01/hino-3.png" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
            <div class="btn btn-dark" style="width: 45px; height: 45px;">
                <span class="carousel-control-prev-icon mb-n2"></span>
            </div>
        </a>
        <a class="carousel-control-next" href="#header-carousel" data-slide="next">
            <div class="btn btn-dark" style="width: 45px; height: 45px;">
                <span class="carousel-control-next-icon mb-n2"></span>
            </div>
        </a>
    </div>
</div>
<!-- Carousel End -->
<!-- Packages Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h5 class="text-body text-uppercase" style="letter-spacing: 5px;">SẢN PHẨM</h5>
            <br>
            <h2>Được tiêu dùng nhiều nhất</h2>
        </div>
        @{ Html.RenderAction("getCategory", "Default");}
    </div>
</div>
<!-- Packages End -->
<!-- Destination Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-body text-uppercase" style="letter-spacing: 5px;">HINO NHẬT BẢN</h6>
            <br>
            <h2>DANH MỤC SẢN PHẨM</h2>
        </div>
        <div class="row">
            @{ Html.RenderAction("getDanhMucSanPham", "Temp");}
        </div>
    </div>
</div>
<!-- Destination Start -->
<!-- Service Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-body text-uppercase" style="letter-spacing: 5px;">Dịch vụ</h6>
            <h1>Dịch vụ  & Liên hệ</h1>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 mb-4">
                <div class="service-item bg-white text-center mb-2 py-5 px-4">
                    <i class="fa fa-2x fa-ticket-alt mx-auto mb-4"></i>
                    <h5 class="mb-2">TƯ VẤN</h5>
                    <p class="m-0">Đội ngũ chuyên viên giàu kinh nghiệm</p>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 mb-4">
                <div class="service-item bg-white text-center mb-2 py-5 px-4">
                    <i class="fa fa-2x fa-hotel mx-auto mb-4"></i>
                    <h5 class="mb-2">PHỤ TÙNG</h5>
                    <p class="m-0">Phụ tùng chính hãng, cung cấp nhanh chóng và đa dạng.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feature Start -->
<div class="container-fluid pb-5">
    <div class="container pb-5">
        <div class="row">
            <div class="col-md-4">
                <div class="d-flex mb-4 mb-lg-0">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center mr-3" style="height: 100px; width: 100px; background-color: #d41d08 ">
                        <i class="fa fa-2x fa-money-check-alt text-white"></i>
                    </div>
                    <div class="d-flex flex-column">
                        <h5 class="">Ngân hàng</h5>
                        <p class="m-0">Hỗ trợ mua xe tải Hino trả góp tới 85% giá trị xe. Đội ngũ chuyên viên giàu kinh nghiệm</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex mb-4 mb-lg-0">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center mr-3" style="height: 100px; width: 100px; background-color: #d41d08 ">
                        <i class="fa fa-2x fa-award text-white"></i>
                    </div>
                    <div class="d-flex flex-column">
                        <h5 class="">Trung tâm dịch vụ</h5>
                        <p class="m-0">Chính sách bảo hành & chăm sóc khách hàng toàn diện.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex mb-4 mb-lg-0">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center  mr-3" style="height: 100px; width: 100px; background-color: #d41d08 ">
                        <i class="fa fa-2x fa-globe text-white"></i>
                    </div>
                    <div class="d-flex flex-column">
                        <h5 class="">Địa chỉ chi nhánh CTY</h5>
                        <p class="m-0">Số 513 Xa lộ Hà Nội,Khu phố 1, P. Long Bình, Tp. Biên Hòa, tỉnh Đồng Nai</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feature End -->
<!-- Service End -->
<!-- Blog Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-body text-uppercase" style="letter-spacing: 5px;">Tin Tức</h6>
            <h1>Tin tức mới nhất về chúng tôi</h1>
        </div>
        <div class="row pb-3">
            @{ Html.RenderAction("getNews", "Default");}
        </div>
    </div>
</div>
<!-- Blog End -->
