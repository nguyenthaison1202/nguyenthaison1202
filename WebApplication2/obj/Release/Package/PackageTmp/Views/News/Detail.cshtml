@model WebApplication2.Models.TinTuc
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<!-- Blog Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-12">
                <!-- Blog Detail Start -->
                <div class="pb-3">
                    <div class="blog-item">
                        <div class="position-relative">
                            <img class="img-fluid w-100" src="~/AssetsAdmin/upload/img/tintuc/@Model.img1" alt="">
                            <div class="blog-date">
                                <h6 class="font-weight-bold mb-n1">01</h6>
                                <small class="text-white text-uppercase">Jan</small>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white mb-3" style="padding: 30px;">
                        <div class="d-flex mb-3">
                            <a class="text-body text-uppercase text-decoration-none">Tin tức</a>
                            <span class="text-body px-2">|</span>
                            <a class="text-primary text-uppercase text-decoration-none">HiNo</a>
                        </div>

                        <h2 class="mb-3">@Model.des1</h2>
                        <p>
                            @Html.Raw(Model.detail1)
                        </p>
                        <h4 class="mb-3">@Model.des2</h4>
                        <img class="img-fluid w-50 float-left mr-4 mb-2" src="~/AssetsAdmin/upload/img/tintuc/@Model.img2">
                        <p>
                            @Html.Raw(Model.detail2)
                        </p>
                        <h5 class="mb-3">@Model.des3</h5>
                        <img class="img-fluid w-50 float-right ml-4 mb-2" src="~/AssetsAdmin/upload/img/tintuc/@Model.img3">
                        <p>
                            @Html.Raw(Model.detail3)
                        </p>
                    </div>
                </div>
                <!-- Blog Detail End -->
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->