@model List<WebApplication2.Models.DanhMuc>
@foreach (var i in Model)
{
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="destination-item position-relative overflow-hidden mb-2">
            <img class="img-fluid" src="@i.img" alt="">
            <a class="destination-overlay text-white text-decoration-none" href="/@ViewBag.meta/@i.meta">
                <h5 class="text-white">@i.name</h5>
            </a>
        </div>
    </div>
}

