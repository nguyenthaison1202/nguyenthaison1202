@model IEnumerable<WebApplication2.Models.TinTuc>
@foreach (var i in Model)
{
    <div class="col-lg-4 col-md-6 mb-4 pb-2">
        <div class="blog-item">
            <div class="position-relative">
                <img class="img-fluid w-100" src="~/AssetsAdmin/upload/img/tintuc/@i.img1" alt="">
                <div class="blog-date">
                    <h6 class="font-weight-bold mb-n1">01</h6>
                    <small class="text-white text-uppercase">Jan</small>
                </div>
            </div>
            <div class="bg-white p-4">
                <div class="d-flex mb-2">
                    <a class="text-primary text-uppercase text-decoration-none">Tin Tức</a>
                    <span class="text-body px-2">|</span>
                    <a class="text-body text-uppercase text-decoration-none">HINO</a>
                </div>
                <a class="h5 m-0 text-decoration-none" href="/@ViewBag.meta/@i.id">@i.name</a>
            </div>
        </div>
    </div>
}

